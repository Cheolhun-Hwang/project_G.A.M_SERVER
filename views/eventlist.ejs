        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">이벤트 목록</h1>
			 <div align='right' style="padding:1%">

		<input type="button" onclick="location.href='./event'"; class="btn btn-success" value="등록"/>		
                    </div>
</div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            이벤트 목록
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            
                                            <th>이벤트 번호</th>
					                       
                                            <th>제목</th>
                                            <th>생성시간</th>
					                        <th>유효기간</th>
                                            <th>조건</th>
                                            <th>장소</th>
                                        
                                            <th>참여인원</th>
                                            <th>혜택</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                          <% node.forEach(function(item, index){   %>
					  <tr>
						
						<td><%= (index+1) %></td>
						<td><%= item.ENAME %></td>
						
                        <td><% let date = new Date(item.ECREATEDATE).toISOString().substring(0, 10);
                            let time = new Date(item.ECREATEDATE).toISOString().substring(11, 16);
                     	   let datetime =date+" "+time; %> 
				<%= datetime %></td>
		
			            <td><% let day = new Date(item.EDEADLINEDATE).toISOString().substring(0, 10);
                            let minute = new Date(item.EDEADLINEDATE).toISOString().substring(11, 16);
                            let daytime =day+" "+minute; %>
				<%= daytime %></td>
				
                 
                        <td><%= item.ECORDINATION %></td>
                        <td><%= item.EWHERE %></td>
			                 
                        <td><%= item.ENUM %></td>
                        <td><%= item.EPROFIT %></td>
                        <td>
                            <input type="button" class="btn btn-danger" name="delete" value="삭제" data-toggle="modal" data-target="#bs-example-modal-lg-<%= (index) %>" />
                        </td>
					  </tr>
				<% }); %>
                                    </tbody>
                                </table>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
            </div>
            <!-- col-lg-12 -->
                 
            <% node.forEach(function(item, index){   %>
           
            <div class="modal fade col-md-12 col-sm-12 modal_layout modal_layout_twit" id="bs-example-modal-lg-<%= (index) %>" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-lg col-md-12 col-sm-12">
                    <div class="modal-content col-md-12 col-sm-12">
                        <div class="modal-header col-md-12 col-sm-12">
                            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                            <h4 class="modal-title" id="myLargeModalLabel">삭제</h4>
                        </div>
        
                        <div class="modal-body col-md-12 col-sm-12">

                            <form role="form" method="post" action="/admin/eventlist/delete">
                                <div class="row">
                                        <div class="col-lg-12">
                                            <div class="panel panel-default">
                                                     <div class="panel-heading">
                                                            삭제
                                                    </div>
                                                    <div class="panel-body">
                                                        <div class"col-lg-6">
                                                                <div class="form-group">
                                                                </div>
                                                                <div class="form-group">
									                                   <p>삭제 하시겠습니까?</p> <input type="hidden" name="hidden_eid" value="<%= item.EID %>"/>
                                                                </div>
                                                                <div class="form-group">
                                                                        <div align='center'>
                                                                                <input type="submit" class="btn btn-primary" value="삭제" name="delete" />
                                                                        </div>
                                                                </div>
                                                        </div>
                                                    </div>
                                            </div>
                                        </div>
                                </div>
                            </form>

                    </div>
                </div>
            </div>
    </div>
                    
    <% }); %>

