    <![endif]-->
    <script>
        function checkpass(){
            	var pass = document.getElementById("pass").value;
		var passagain = document.getElementById("passagain").value;
		if(pass != passagain){
                	alert("같은 비밀번호를 입력해 주세요!");
            	}else{
			var form = document.getElementById("form");
			form.setAttribute('method', 'post');
                    	form.setAttribute('action', '/admin/changepw');
			form.submit();
                    
		}
        }
    </script>

</head>

<body style="background-color: #428bca">

    <div class="container" >
        <div class="row" >
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title" align="center" style="color:#428bca; font-weight: 300;" >비밀번호 변경하기</h3>
                    </div>
                    	<form id="form">
			<div class="panel-body">
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password" name="pass" id="pass" type="password" autofocus>
                                </div>
                                <div class="form-group">
                                    <input class="form-control" placeholder="Password Again" id="passagain" name="passagain" type="password" value="">
                                </div>

                                <!-- Change this to a button or input when using this as a form -->
                                <input type="button" class="btn btn-lg btn-primary btn-block" onclick="checkpass();"  value="CHANGE PASSWORD"/>
			</div>
			</form>
                </div>
            </div>
        </div>
        <div ></div>
    </div>

    <!-- jQuery -->
